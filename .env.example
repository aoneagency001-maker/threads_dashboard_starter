# OpenAI API Key для умного анализа цитат (опционально, не используется)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (основной AI для анализа книг)
# Получить: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Threads API - Официальный токен Instagram Graph API
# Получить: https://developers.facebook.com/
THREADS_ACCESS_TOKEN=your_threads_access_token_here
THREADS_APP_ID=your_app_id_here
THREADS_USER_ID=your_user_id_here
IG_USER_ID=your_user_id_here

# Threads API - Логин/пароль для неофициальной библиотеки threads-api (опционально)
INSTAGRAM_USERNAME=your_username
